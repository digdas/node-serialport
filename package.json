{
  "name": "serialport-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Node.js packages to access serial ports, process data from them and speak many protocols",
  "engines": {
    "node": ">=6.0.0"
  },
  "license": "MIT",
  "scripts": {
    "rebuild": "lerna run --stream --parallel rebuild",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "cd packages/website && npm run build",
    "docs:dev": "cd packages/website && npm run start",
    "format": "npm run format:global && lerna run --stream format",
    "format:global": "tslint -p tsconfig.json packages/**/*.ts test/**/*.ts --fix",
    "generate": "plop",
    "lint": "npm run lint:global && lerna run --stream lint",
    "lint:global": "tslint -p tsconfig.json packages/**/*.ts test/**/*.ts",
    "postinstall": "lerna bootstrap --no-ci",
    "build": "lerna run --stream --parallel build",
    "build:ts": "lerna run --stream --parallel build:ts",
    "prebuild": "lerna run --stream --parallel prebuild",
    "publish": "lerna publish",
    "test": "nyc --reporter=html --reporter=text --reporter lcovonly mocha",
    "test:arduino": "TEST_PORT=$(./bin/find-arduino.js) npm test",
    "test:watch": "mocha -w"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/node-serialport/node-serialport.git"
  },
  "maintainers": [
    {
      "name": "Francis Gulotta",
      "email": "wizard@roborooter.com",
      "url": "https://www.roborooter.com"
    }
  ],
  "dependencies": {
    "@types/bindings": "^1.3.0"
  },
  "devDependencies": {
    "@types/debug": "0.0.30",
    "@types/node": "^10.10.1",
    "bluebird": "^3.5.2",
    "cc": "^1.0.1",
    "chai": "^4.0.2",
    "chai-subset": "^1.5.0",
    "codecov": "^3.1.0",
    "lerna": "^3.4.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.1",
    "plop": "^2.1.0",
    "prebuild": "^8.0.0",
    "prettier": "^1.14.3",
    "proxyquire": "^2.1.0",
    "sinon": "^6.3.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "tslint-plugin-prettier": "^2.0.0",
    "typescript": "^3.0.3"
  }
}
